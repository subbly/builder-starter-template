{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "page": {
      "type": "integer",
      "exclusiveMinimum": 0,
      "maximum": 9007199254740991
    },
    "perPage": {
      "type": "integer",
      "minimum": 1,
      "maximum": 100
    },
    "type": {
      "type": "string",
      "enum": [
        "one_time",
        "subscription"
      ]
    },
    "ids": {
      "type": "array",
      "items": {
        "type": "integer",
        "exclusiveMinimum": 0,
        "maximum": 9007199254740991
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "slugs": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "published": {
      "type": "integer",
      "minimum": 0,
      "maximum": 1
    },
    "digital": {
      "type": "integer",
      "minimum": 0,
      "maximum": 1
    },
    "giftCard": {
      "type": "integer",
      "minimum": 0,
      "maximum": 1
    },
    "expand": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Relations to expand: variants, plans, bundle"
    },
    "sort": {
      "type": "object",
      "properties": {
        "field": {
          "type": "string",
          "enum": [
            "id",
            "name"
          ],
          "description": "Sort field: id (incremental, sorts by creation order), name (alphabetical)"
        },
        "direction": {
          "type": "string",
          "enum": [
            "asc",
            "desc"
          ]
        }
      },
      "required": [
        "field",
        "direction"
      ],
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
