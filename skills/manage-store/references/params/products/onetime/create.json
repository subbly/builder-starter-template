{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "anyOf": [
    {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "maxLength": 255
        },
        "slug": {
          "type": "string",
          "maxLength": 80,
          "pattern": "^[a-zA-Z0-9_-]+$"
        },
        "description": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "tags": {
          "type": "object",
          "properties": {
            "create": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "value": {
                    "type": "string",
                    "maxLength": 255
                  }
                },
                "required": [
                  "value"
                ],
                "additionalProperties": false
              }
            }
          },
          "additionalProperties": false
        },
        "funnelId": {
          "anyOf": [
            {
              "type": "integer",
              "exclusiveMinimum": 0,
              "maximum": 9007199254740991
            },
            {
              "type": "null"
            }
          ]
        },
        "taxProductCode": {
          "anyOf": [
            {
              "type": "string",
              "maxLength": 30
            },
            {
              "type": "null"
            }
          ],
          "description": "Only available for US-based shops."
        },
        "images": {
          "anyOf": [
            {
              "type": "object",
              "properties": {
                "create": {
                  "maxItems": 5,
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "url": {
                        "type": "string",
                        "maxLength": 255,
                        "format": "uri"
                      },
                      "order": {
                        "anyOf": [
                          {
                            "type": "integer",
                            "minimum": 0,
                            "maximum": 9007199254740991
                          },
                          {
                            "type": "null"
                          }
                        ]
                      }
                    },
                    "required": [
                      "url"
                    ],
                    "additionalProperties": false
                  }
                }
              },
              "additionalProperties": false
            },
            {
              "type": "null"
            }
          ]
        },
        "digital": {
          "type": "number",
          "const": 0
        },
        "deliveryInfo": {
          "anyOf": [
            {
              "type": "string",
              "maxLength": 500
            },
            {
              "type": "null"
            }
          ],
          "description": "Shipping or delivery instructions shown to customers."
        },
        "giftingEnabled": {
          "type": "integer",
          "minimum": 0,
          "maximum": 1
        }
      },
      "required": [
        "name",
        "slug",
        "digital"
      ],
      "additionalProperties": false
    },
    {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "maxLength": 255
        },
        "slug": {
          "type": "string",
          "maxLength": 80,
          "pattern": "^[a-zA-Z0-9_-]+$"
        },
        "description": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "tags": {
          "type": "object",
          "properties": {
            "create": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "value": {
                    "type": "string",
                    "maxLength": 255
                  }
                },
                "required": [
                  "value"
                ],
                "additionalProperties": false
              }
            }
          },
          "additionalProperties": false
        },
        "funnelId": {
          "anyOf": [
            {
              "type": "integer",
              "exclusiveMinimum": 0,
              "maximum": 9007199254740991
            },
            {
              "type": "null"
            }
          ]
        },
        "taxProductCode": {
          "anyOf": [
            {
              "type": "string",
              "maxLength": 30
            },
            {
              "type": "null"
            }
          ],
          "description": "Only available for US-based shops."
        },
        "images": {
          "anyOf": [
            {
              "type": "object",
              "properties": {
                "create": {
                  "maxItems": 5,
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "url": {
                        "type": "string",
                        "maxLength": 255,
                        "format": "uri"
                      },
                      "order": {
                        "anyOf": [
                          {
                            "type": "integer",
                            "minimum": 0,
                            "maximum": 9007199254740991
                          },
                          {
                            "type": "null"
                          }
                        ]
                      }
                    },
                    "required": [
                      "url"
                    ],
                    "additionalProperties": false
                  }
                }
              },
              "additionalProperties": false
            },
            {
              "type": "null"
            }
          ]
        },
        "digital": {
          "type": "number",
          "const": 1
        },
        "giftCard": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "integer",
              "minimum": 0,
              "maximum": 1,
              "description": "1 = gift card product, 0 = regular digital product."
            },
            "expiration": {
              "anyOf": [
                {
                  "type": "integer",
                  "minimum": 1,
                  "maximum": 36
                },
                {
                  "type": "null"
                }
              ],
              "description": "Expiration in months. Only when enabled is 1."
            }
          },
          "required": [
            "enabled"
          ],
          "additionalProperties": false,
          "description": "Gift card configuration. Omit for a regular digital product."
        }
      },
      "required": [
        "name",
        "slug",
        "digital"
      ],
      "additionalProperties": false
    }
  ]
}
