{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer",
      "exclusiveMinimum": 0,
      "maximum": 9007199254740991
    },
    "name": {
      "type": "string",
      "maxLength": 255
    },
    "slug": {
      "type": "string",
      "maxLength": 80,
      "pattern": "^[a-zA-Z0-9_-]+$"
    },
    "description": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ]
    },
    "deliveryInfo": {
      "anyOf": [
        {
          "type": "string",
          "maxLength": 500
        },
        {
          "type": "null"
        }
      ],
      "description": "Shipping or delivery instructions. Only for non-digital products."
    },
    "giftingEnabled": {
      "type": "integer",
      "minimum": 0,
      "maximum": 1,
      "description": "Only for non-digital products."
    },
    "giftCard": {
      "type": "object",
      "properties": {
        "expiration": {
          "anyOf": [
            {
              "type": "integer",
              "minimum": 1,
              "maximum": 36
            },
            {
              "type": "null"
            }
          ],
          "description": "Expiration in months."
        }
      },
      "additionalProperties": false,
      "description": "Update gift card settings. Only for existing gift card products."
    },
    "collectShippingAddress": {
      "type": "integer",
      "minimum": 0,
      "maximum": 1,
      "description": "1 = collect shipping address at checkout. Only for digital products."
    },
    "tags": {
      "type": "object",
      "properties": {
        "create": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "value": {
                "type": "string",
                "maxLength": 255
              }
            },
            "required": [
              "value"
            ],
            "additionalProperties": false
          }
        },
        "delete": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "integer",
                "exclusiveMinimum": 0,
                "maximum": 9007199254740991
              }
            },
            "required": [
              "id"
            ],
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "funnelId": {
      "anyOf": [
        {
          "type": "integer",
          "exclusiveMinimum": 0,
          "maximum": 9007199254740991
        },
        {
          "type": "null"
        }
      ]
    },
    "taxProductCode": {
      "anyOf": [
        {
          "type": "string",
          "maxLength": 30
        },
        {
          "type": "null"
        }
      ],
      "description": "Only available for US-based shops."
    },
    "images": {
      "type": "object",
      "properties": {
        "create": {
          "maxItems": 5,
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "url": {
                "type": "string",
                "maxLength": 255,
                "format": "uri"
              },
              "order": {
                "anyOf": [
                  {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 9007199254740991
                  },
                  {
                    "type": "null"
                  }
                ]
              }
            },
            "required": [
              "url"
            ],
            "additionalProperties": false
          }
        },
        "delete": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "integer",
                "exclusiveMinimum": 0,
                "maximum": 9007199254740991
              }
            },
            "required": [
              "id"
            ],
            "additionalProperties": false
          }
        },
        "update": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "integer",
                "exclusiveMinimum": 0,
                "maximum": 9007199254740991
              },
              "order": {
                "type": "integer",
                "minimum": 0,
                "maximum": 9007199254740991
              }
            },
            "required": [
              "id",
              "order"
            ],
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "id"
  ],
  "additionalProperties": false
}
