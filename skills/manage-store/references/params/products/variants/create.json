{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "productId": {
      "type": "integer",
      "exclusiveMinimum": 0,
      "maximum": 9007199254740991
    },
    "name": {
      "anyOf": [
        {
          "type": "string",
          "maxLength": 255
        },
        {
          "type": "null"
        }
      ],
      "description": "Required when product is a gift card or no options provided. Auto-generated from option values (joined with \" / \") when omitted."
    },
    "description": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ]
    },
    "price": {
      "type": "integer",
      "minimum": 0,
      "maximum": 9007199254740991
    },
    "inventoryItemId": {
      "anyOf": [
        {
          "type": "integer",
          "exclusiveMinimum": 0,
          "maximum": 9007199254740991
        },
        {
          "type": "null"
        }
      ],
      "description": "Prohibited for gift card products."
    },
    "options": {
      "anyOf": [
        {
          "type": "object",
          "properties": {
            "create": {
              "maxItems": 3,
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "maxLength": 255
                  },
                  "value": {
                    "type": "string"
                  }
                },
                "required": [
                  "name",
                  "value"
                ],
                "additionalProperties": false
              }
            }
          },
          "additionalProperties": false
        },
        {
          "type": "null"
        }
      ],
      "description": "Prohibited for gift card products. Max 3 option types per product. Must match existing option names if the product already has variants with options."
    }
  },
  "required": [
    "productId",
    "price"
  ],
  "additionalProperties": false
}
