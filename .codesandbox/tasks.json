{
  "setupTasks": [
    {
      "name": "Copy gitignore",
      "command": "cp gitignore.example .gitignore"
    },
    {
      "name": "Install Dependencies",
      "command": "pnpm install --dangerously-allow-all-builds"
    }
  ],
  "tasks": {
    "dev": {
      "name": "Start Dev Server",
      "command": "nodemon --delay 2 --exec 'pnpm run dev' --ext css,scss --watch src --watch pnpm-lock.yaml",
      "runAtStart": true,
      "preview": {
        "port": 3000
      }
    },
    "install": {
      "name": "Install Dependencies",
      "command": "pnpm install --dangerously-allow-all-builds"
    },
    "watch": {
      "name": "Watch Dependencies",
      "command": "export SHELL=/bin/bash; chokidar 'package.json' -c 'pnpm install --dangerously-allow-all-builds'",
      "runAtStart": true
    }
  }
}
