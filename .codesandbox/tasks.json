{
  "setupTasks": [
    {
      "name": "Copy gitignore",
      "command": "cp gitignore.example .gitignore"
    },
    {
      "name": "Install Dependencies",
      "command": "pnpm install --dangerously-allow-all-builds"
    }
  ],
  "tasks": {
    "dev": {
      "name": "Start Dev Server",
      "command": "pnpm run dev",
      "runAtStart": true,
      "preview": {
        "port": 3000
      },
      "restartOn": {
        "files": ["pnpm-lock.yaml", "**/*.(css|scss)"],
        "clone": true,
        "resume": false
      }
    },
    "install": {
      "name": "Install Dependencies",
      "command": "pnpm install --dangerously-allow-all-builds",
      "runAtStart": true,
      "restartOn": {
        "files": ["package.json"]
      }
    }
  }
}
